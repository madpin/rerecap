{
  "name": "recap",
  "displayName": "Recap: Smart Split and Summarize with ChatGPT",
  "version": "1.1.0",
  "description": "Summarize the text you are interested in",
  "author": "Yaozhi Wang",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "analyze": "plasmo build --source-maps --bundle-buddy"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@plasmohq/storage": "^1.2.2",
    "eventsource-parser": "^0.1.0",
    "expiry-map": "^2.0.0",
    "lodash-es": "^4.17.21",
    "normalize-url": "^8.0.0",
    "plasmo": "0.68.0",
    "react": "18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.5",
    "rehype-highlight": "^6.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/chrome": "0.0.210",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-copy-to-clipboard": "^5.0.4",
    "@types/react-dom": "18.0.10",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*.openai.com/"
    ],
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "resources": [
          "options.html"
        ]
      },
      {
        "resources": [
          "~assets/icon.svg"
        ],
        "matches": [
          "http://*/*",
          "https://*/*"
        ]
      }
    ],
    "commands": {
      "toggle-enable-page": {
        "suggested_key": {
          "default": "Ctrl+U",
          "mac": "Command+U"
        },
        "description": "Toggle enable/disable for current page."
      },
      "toggle-enable-host": {
        "suggested_key": {
          "default": "Ctrl+I",
          "mac": "Command+I"
        },
        "description": "Toggle enable/disable for current domain."
      },
      "summarize-page": {
        "suggested_key": {
          "default": "Ctrl+K",
          "mac": "Command+K"
        },
        "description": "Summarize the content on current page."
      }
    }
  }
}